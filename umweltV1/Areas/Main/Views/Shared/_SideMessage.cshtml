@if (TempData["success"] != null)
{
    <script>
        var message = '@TempData["success"].ToString()' ;

        const Toast = Swal.mixin({
            toast: true,
            position: 'top-right',
            iconColor: 'white',
            customClass: {
                popup: 'colored-toast'
            },
            showConfirmButton: false,
            timer: 3500,
            timerProgressBar: true
        })
        Toast.fire({
            icon: 'success',
            title: message
        })
    </script>
}
else if (TempData["error"] != null )
{
    <script>
        var message = '@TempData["success"].ToString()';

        const Toast = Swal.mixin({
            toast: true,
            position: 'top-right',
            iconColor: 'white',
            customClass: {
                popup: 'colored-toast'
            },
            showConfirmButton: false,
            timer: 1500,
            timerProgressBar: true
        })
        Toast.fire({
            icon: 'error',
            title: message
        })
    </script>
}