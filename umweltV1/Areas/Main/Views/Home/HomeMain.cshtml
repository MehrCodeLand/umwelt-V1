
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Css/HomeMain.css">
    <title>HOME|UMWELT</title>
</head>

<body>
    <div class="container">
        <div class="header-div">
            <div class="left">@if(User.Identity.Name != null){
                <p>@User.Identity.Name</p>
                }else{
                    <p>You Are not sign in</p>
                }</div>
            <div class="middle">s</div>
            <div class="right">s</div>
        </div>

        <div class="main-div">
            <div class="all-buttons">
                <button type="button" class="create-role">
                    <a href="#">
                        Create Role
                    </a>
                </button>
                <button class="all-users">
                    <a asp-area="Main" asp-controller="Home" asp-action="SignUpUser">SignUp User</a>
                </button>
                <button type="button" class="main-home">
                    <a asp-area="Main" asp-controller="Home" asp-action="SignIn">
                        SignIn
                    </a>
                </button>
                <button type="button" class="main-home">
                    <a asp-area="Main" asp-controller="Home" asp-action="SignOutUser">
                        SignOut
                    </a>
                </button>
            </div>
        </div>

    </div>
</body>
</html>
